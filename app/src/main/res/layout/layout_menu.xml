<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary2">

    <RelativeLayout
        android:id="@+id/btnClose"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="onClick">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/clear_meterial"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMenuProfile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:text="How to use?"
            android:drawableLeft="@drawable/info_meterial"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMenuWallet"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/public_meterial"
            android:gravity="left|center_vertical"
            android:onClick="onClick"
            android:text="Privacy policy"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUniversalLeaderBoard"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/star_rate_meterial"
            android:gravity="left|center_vertical"
            android:onClick="onClick"
            android:text="Rate status saver"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInviteFriend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/settings_metrial"
            android:onClick="onClick"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMenuSignOut"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/share_meterial"
            android:gravity="left|center_vertical"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Share this app"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMenuFb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="center"
             />

        <ImageView
            android:id="@+id/ivMenuGoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="center"
             />

        <ImageView
            android:id="@+id/ivMenuInstagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="center"
             />
    </LinearLayout>
</RelativeLayout>