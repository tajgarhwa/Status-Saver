<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary2">

    <RelativeLayout
        android:id="@+id/btnClose"
        android:layout_width="?attr/actionBarSize"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="onClick">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#ff5b28" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMenuProfile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:clickable="true"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMenuWallet"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUniversalLeaderBoard"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInviteFriend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:drawablePadding="20dp"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMenuSignOut"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:clickable="true"

            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:onClick="onClick"

            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivMenuFb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="center"
             />

        <ImageView
            android:id="@+id/ivMenuGoogle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="center"
             />

        <ImageView
            android:id="@+id/ivMenuInstagram"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:clickable="true"
            android:onClick="onClick"
            android:scaleType="center"
             />
    </LinearLayout>
</RelativeLayout>